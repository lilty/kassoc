<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<Tab xmlns:fx="http://javafx.com/fxml/1" text="Settings" xmlns="http://javafx.com/javafx/8"
     fx:controller="kassoc.controller.SettingsController">
    <AnchorPane>
        <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20.0" left="10.0" right="10.0" top="20.0"/>
            </padding>
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" percentWidth="33"/>
                    <ColumnConstraints hgrow="SOMETIMES"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints vgrow="SOMETIMES"/>
                    <RowConstraints vgrow="SOMETIMES"/>
                </rowConstraints>
                <Label text="Student NÂ°" GridPane.halignment="LEFT"
                       GridPane.valignment="CENTER">
                    <padding>
                        <Insets right="10.0"/>
                    </padding>
                </Label>
                <Label text="Mail address" GridPane.halignment="LEFT" GridPane.rowIndex="1"
                       GridPane.valignment="CENTER">
                    <padding>
                        <Insets right="10.0"/>
                    </padding>
                </Label>
                <Label text="Name" GridPane.halignment="LEFT" GridPane.rowIndex="2"
                       GridPane.valignment="CENTER">
                    <padding>
                        <Insets right="10.0"/>
                    </padding>
                </Label>
                <Label text="Password" GridPane.halignment="LEFT" GridPane.rowIndex="3"
                       GridPane.valignment="CENTER">
                    <GridPane.margin>
                        <Insets/>
                    </GridPane.margin>
                </Label>
                <Label text="Confirm password" GridPane.halignment="LEFT" GridPane.rowIndex="4"
                       GridPane.valignment="CENTER">
                    <GridPane.margin>
                        <Insets/>
                    </GridPane.margin>
                    <padding>
                        <Insets right="10.0"/>
                    </padding>
                </Label>
                <TextField fx:id="stdIdInput" GridPane.columnIndex="1" styleClass="input">
                    <GridPane.margin>
                        <Insets bottom="3.0" top="3.0"/>
                    </GridPane.margin>
                </TextField>
                <TextField fx:id="mailInput" GridPane.columnIndex="1" GridPane.rowIndex="1"
                           styleClass="input">
                    <GridPane.margin>
                        <Insets bottom="3.0" top="3.0"/>
                    </GridPane.margin>
                </TextField>
                <TextField fx:id="nameInput" GridPane.columnIndex="1" GridPane.rowIndex="2"
                           styleClass="input">
                    <GridPane.margin>
                        <Insets bottom="3.0" top="3.0"/>
                    </GridPane.margin>
                </TextField>
                <PasswordField fx:id="pwdInput" GridPane.columnIndex="1" GridPane.rowIndex="3"
                               styleClass="input">
                    <GridPane.margin>
                        <Insets bottom="3.0" top="3.0"/>
                    </GridPane.margin>
                </PasswordField>
                <PasswordField fx:id="confirmPwdInput" GridPane.columnIndex="1" GridPane.rowIndex="4"
                               styleClass="input">
                    <GridPane.margin>
                        <Insets bottom="3.0" top="3.0"/>
                    </GridPane.margin>
                </PasswordField>
            </GridPane>
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0"/>
                    <ColumnConstraints hgrow="SOMETIMES"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints vgrow="SOMETIMES"/>
                    <RowConstraints vgrow="SOMETIMES"/>
                </rowConstraints>
                <padding>
                    <Insets top="10.0"/>
                </padding>
                <Button maxWidth="Infinity" mnemonicParsing="false" text="Save"
                        onAction="#saveAction" styleClass="input">
                    <GridPane.margin>
                        <Insets bottom="5.0" right="5.0" top="5.0"/>
                    </GridPane.margin>
                </Button>
                <Button maxWidth="Infinity" mnemonicParsing="false"
                        text="Cancel"
                        GridPane.columnIndex="1" onAction="#backAction" styleClass="input">
                    <GridPane.margin>
                        <Insets bottom="5.0" left="5.0" top="5.0"/>
                    </GridPane.margin>
                </Button>
            </GridPane>
        </VBox>
    </AnchorPane>
</Tab>
